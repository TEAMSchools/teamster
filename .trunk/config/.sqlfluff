[sqlfluff]
dialect = tsql
processes = -1
exclude_rules = L003, L022, L017, L031, L059, L067, L041, L036, L034

[sqlfluff:rules]
max_line_length = 88
capitalisation_policy = upper
extended_capitalisation_policy = upper

[sqlfluff:rules:L036]
wildcard_policy = multiple

[sqlfluff:rules:L057]
quoted_identifiers_policy = none

[sqlfluff:rules:L059]
ignore_words = subject, value, name, type, start_date
