{
  "dbt.enableNewLineagePanel": true,
  "dbt.enableNewQueryPanel": true,
  "dbt.fileNameTemplateGenerateModel": "{prefix}_{sourceName}__{tableName}",
  "dbt.prefixGenerateModel": "stg",
  "dbt.queryLimit": 500,
  "editor.defaultFormatter": "trunk.io",
  "editor.formatOnSave": true,
  "editor.inlineSuggest.enabled": true,
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "all",
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 88,
  "githubPullRequests.ignoredPullRequestBranches": ["main"],
  "python.createEnvironment.trigger": "off",
  "python.defaultInterpreterPath": ".venv/bin/python",
  "python.envFile": "${workspaceFolder}/env/.env",
  "python.terminal.activateEnvironment": false,
  "python.testing.pytestArgs": ["tests", "--capture=no"],
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "testing.showAllMessages": true,
  "trunk.numJobs": 1,
  "files.associations": {
    "*.toml": "toml",
    "*.env": "shellscript",
    "*.sql": "jinja-sql"
  },
  "files.exclude": {
    "**/.git": false,
    "**/.trunk/*actions/": true,
    "**/.trunk/*logs/": true,
    "**/.trunk/*notifications/": true,
    "**/.trunk/*out/": true,
    "**/.trunk/*plugins/": true
  },
  "files.watcherExclude": {
    "**/.trunk/*actions/": true,
    "**/.trunk/*logs/": true,
    "**/.trunk/*notifications/": true,
    "**/.trunk/*out/": true,
    "**/.trunk/*plugins/": true
  }
}
